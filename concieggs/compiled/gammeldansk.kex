/* Gør det ordentligt, forkert, forfinet, gammelt dansk. */
/* Fokuserer på at rette op på de mest brugte ord. */

start: message

message := maybeSep inner maybeSep

inner := word sep inner
       | word
       | ""

maybeSep := /[^A-Za-zæøå0-9]*/
sep      := /[^A-Za-zæøå0-9]+/

word := ~/igen/ "atter"
      | ~/og/ "samt"
      | ~/mens/ "medens"
      | ~/jeres/ "eders"
      | ~/lidt/ "liden"
      | ~/se/ "besyne"
      | ~/ser/ "besyner"
      | ~/glad/ "fortryllet"
      | ~/far/ "fader"
      | ~/mor/ "moder"
      | ~/komme/ "arrivere"
      | ~/kommer/ "arriverer"
      | ~/vil/ "ønsker" / ikke/? " at"
      | /[a-zA-ZæøåÆØÅ0-9]+/
