#!/bin/sh

set -e

nogen() {
    randomLine <<EOF
Nogen
En eller anden
Hvem ved jeg
En ven udefra
En mystisk personage
EOF
}

echo "$EGGS_BODY" \
    | perl -ne 'm/((?:https?:\/\/|www\.)\S+?)[.,;!?]*(?:\s|$)/; print $1' \
    | with_stdin_as_arg curl -sL \
    | egrep -o '<title>[^<]+' \
    | cut -d'>' -f2 \
    | head -n1 \
    | with_stdin_as_arg echo "$(eval $(ifEmpty nogen $(randomName "$EGGS_USER"))) har h√¶gtet til en hjemmeside:"
